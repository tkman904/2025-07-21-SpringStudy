<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<!-- Controller 등록 : 톰캣에 의해 구동 -->
	<!-- 
		public class DispatcherServlet extends HttpServlet {
			WebApplicationContext ct;
			// 클래스 관리 => XML의 경로 전송
			public void init(ServletConfig config) {
				ServletConfig config : web.xml을 읽어서 처리
				String path = config.getInitParameter("contextConfigLocation");
										// 지정된 변수로 설정
				if(path == null) {
					path = "/WEB-INF/<servlet-name>-servlet.xml"
					 => dispatcher-servlet.xml (default)
				}
				
				ct = new ClassPathXmlApplicationContext(path)
				=> XML 번역
			}
		}
		    | 라이브러리                 | 스프링
		DispatcherServlet ==== WebApplicationContext => Boot
		=================      =====================
		 | 클래스 요청             | 클래스 검색 후 찾기
		                          | @Autowired
	 -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/application-*.xml</param-value>
		</init-param>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- 한글 변환 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
		  <param-name>encoding</param-name>
		  <param-value>UTF-8</param-value>
		</init-param>
		<init-param>
		  <param-name>forceEncoding</param-name>
		  <param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 보안 설정 -->
	<!-- 에러 설정 -->
</web-app>
